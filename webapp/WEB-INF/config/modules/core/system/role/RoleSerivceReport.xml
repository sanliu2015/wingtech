<?xml version="1.0" encoding="GBK"?>
<dbRuleDefines>
  <ReportConfigureBean id="employeeeSerivceReport" type="object"> 
    <property name="name">角色信息</property>
    <property name="orderBy">1</property>
	<property name="appKey">roleService</property>
	<property name="dataSetId">roleService</property>
    <property name="sourceTableRules" type="list">
      <object class="SourceTableRuleBean" id="roleServiceTable">
        <property name="sql"><![CDATA[ from TS_Role as a   ]]></property> 
		<object name="uiContainer" type="object"  class="ReportUIContainer"  > 
			<object name="datagrid" type="object"  class="ReportDatagrid"    singleSelect="true"   fitColumns="false"   toolbar="#roleServiceToolbar"> 
					<property name="customProperty" type="map">
						<entry key="striped" dataType="boolean">true</entry>
			         </property>
			</object> 
			<object name="toolbarContainer" type="object"  class="ToolbarContainer"  id="roleServiceToolbar"> 
			  <property name="toolbars" type="list">
				<object class="ReportToolbar" className="easyui-linkbutton" name="添加" dataOptions="plain:true,iconCls:'icon-add'"  url="/core/roleService/addRole.do" limitChooseRows="0">
					<property name="customProperty" type="map">
					   <entry key="dialogOpts">height:400,width:600</entry>  
			       </property>
				</object> 
				<object class="ReportToolbar" className="easyui-linkbutton" name="修改" dataOptions="plain:true,iconCls:'icon-edit'"    url="/core/roleService/editRole.do"> 
				     <property name="customProperty" type="map">
					   <entry key="dialogOpts">height:400,width:600</entry>  
			       </property>
					 <property name="recParamTemplate">id=#{id}</property>
				</object>
				<object class="ReportToolbar" className="easyui-linkbutton" name="删除" dataOptions="plain:true,iconCls:'icon-remove'"    url="/core/roleService/json/delete.do"  targetName="ajax"> 
					 <property name="recParamTemplate">id=#{id}</property>
					  <property name="customProperty" type="map">  
						<entry key="promptStatement" >您确认要删除该记录吗？</entry> 
			         </property>
				</object>
              </property>   
			</object>
		</object> 
        <property name="sourceFields" type="list"> 
          <object class="SourceFieldRuleBean" tableName="a" frozenColumn="1" fieldName="name"  displayLable="名称" dataType="string" isQueryCondition="1"/>
		  <object class="SourceFieldRuleBean" tableName="a" fieldName="number" displayLable="编号" dataType="string"   />  
		  <object class="SourceFieldRuleBean" tableName="a" fieldName="roleKind"    displayLable="级别" dataType="string"  dataSourceKind="1" valueIsFromDataSource="1" queryControlKind="3"   >
            <property name="dataSourceSql">select code,name from TS_SysCode where codekind=21</property>
          </object> 
		 <object class="SourceFieldRuleBean" tableName="a" fieldName="itemIndex"   displayLable="顺序" dataType="int"  />   
		 <object class="SourceFieldRuleBean" tableName="a" fieldName="status"    displayLable="状态" dataType="string" isQueryCondition="1" dataSourceKind="1"  valueIsFromDataSource="1" queryControlKind="3"   >
            <property name="dataSourceSql">select code,name from TS_SysCode where codekind=20</property>
          </object>
		   <object class="SourceFieldRuleBean" tableName="a"   fieldName="id" displayLable="id" dataType="int" displayColumn="0"/>
        </property> 
      </object>
    </property> 
  </ReportConfigureBean>
</dbRuleDefines>
